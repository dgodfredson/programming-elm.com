{
  "name": "programming-elm.com",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "cd site && elmstatic",
    "deploy": "git push heroku master",
    "deploy:static-assets": "surge -p ./static-assets",
    "dev": "npm run build && run-p site:dev-server site:watch site:livereload",
    "dev2": "node site/dev-server.js",
    "site:dev-server": "cd site/_site; serve",
    "site:watch": "cd site; nodemon -C -x 'npx elmstatic' -w _layouts -w _resources -w config.json -e 'css elm jpg json png'",
    "site:livereload": "livereload site/_site",
    "server:dev": "nodemon index.js",
    "start": "node index.js",
    "package": "elm-package",
    "make": "elm-make",
    "repl": "elm-repl",
    "reactor": "elm-reactor",
    "test": "npm run test:api",
    "test:api": "run-p --race test:server test:api:run",
    "test:api:run": "wait-on http://localhost:8001/feed && teenytest api-tests/**/*.test.js",
    "test:server": "PORT=8001 node .",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "body-parser": "^1.18.2",
    "cat-names": "^1.0.2",
    "chalk": "^2.3.0",
    "cheerio": "^1.0.0-rc.2",
    "clean-webpack-plugin": "^0.1.17",
    "connect-history-api-fallback": "^1.5.0",
    "cors": "^2.8.4",
    "css-loader": "^0.28.7",
    "cuid": "^2.1.0",
    "dog-names": "^1.0.2",
    "dotenv": "^4.0.0",
    "elm": "^0.19.0-bugfix6",
    "elmstatic": "^0.4.0",
    "express": "^4.16.2",
    "express-http-proxy": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-minifier": "^3.5.8",
    "html-webpack-plugin": "^2.30.1",
    "http-proxy-middleware": "^0.17.4",
    "json-server": "^0.12.1",
    "lodash": "^4.17.5",
    "minimist": "1.2.0",
    "postcss-loader": "^2.0.8",
    "react-dev-utils": "^4.2.1",
    "react-error-overlay": "^3.0.0",
    "rxjs": "^5.5.6",
    "shelljs": "^0.7.8",
    "string-replace-loader": "^1.3.0",
    "style-loader": "^0.19.0",
    "surge": "^0.20.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "unique-random-array": "^1.0.0",
    "url-loader": "^0.6.2",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "chokidar": "^3.0.0",
    "livereload": "^0.7.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.11.1",
    "serve": "^11.0.0",
    "serve-handler": "^6.0.0",
    "superagent": "^4.1.0",
    "teenytest": "^5.2.0",
    "teenytest-promise": "^1.0.0",
    "wait-on": "^3.2.0"
  },
  "heroku-run-build-script": true,
  "teenytest": {
    "timeout": 20000,
    "plugins": [
      "teenytest-promise"
    ]
  }
}
